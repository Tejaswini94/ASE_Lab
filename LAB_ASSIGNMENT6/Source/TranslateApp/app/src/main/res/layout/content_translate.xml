<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tutorial.cs5551.com.translateapp.TranslateActivity"
    tools:showIn="@layout/activity_translate"
    android:background="@drawable/image">

    <TextView
        android:id="@+id/txt_head"
        android:text="classify the mood of text"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:visibility="visible"
        android:textSize="10sp"
        android:textColor="#3b40c6"
        android:layout_weight="0.03"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.sample.foo.simplewebapi.MainActivity"
        android:id="@+id/home_container"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/txt_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:inputType="textEmailAddress"
            android:hint="Enter the text to classify tone "
            android:textSize="8sp" />


        <Button
            android:id="@+id/btn_Search"
            android:layout_width="78dp"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            style="@style/Base.Widget.AppCompat.Button"
            android:text="Classify"
            android:onClick="translateText"
            android:layout_marginTop="3dp"
            android:background="@drawable/button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_Result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:textSize="8sp"
            android:textColor="#0000FF"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txt_Result2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:textSize="8sp"
            android:textColor="#0000FF"
            android:layout_marginTop="5dp"
            android:layout_weight="0.02" />

    </LinearLayout>
</RelativeLayout>
